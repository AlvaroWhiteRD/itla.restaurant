@{
}
@model Resturant.Domain.Models.ProductoAddModel;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Restaurante El Camaron - Productos</title>
</head>
<body>
    <div class="jumbotron">
        <div class="container">
            <h1 class="text-center">Nuevo Producto</h1>
            <div class="row">
                <div class="col-sm-8 offset-sm-2">

                    <div class="container mt-5">
                        <h2>Crear Nuevo Producto</h2>
                        <form asp-controller="Product" asp-action="Create" method="post">
                            <div class="form-row">
                                <div class="form-group col-md-3">
                                    <label asp-for="Descripcion">Descripcion</label>
                                    <input asp-for="Descripcion" class="form-control" />
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-3">
                                    <label asp-for="Qr">Qr</label>
                                    <input asp-for="Qr" class="form-control" />
                                    <span asp-validation-for="Qr" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-3">
                                    <label asp-for="Stock">Stock</label>
                                    <input asp-for="Stock" type="number" class="form-control" />
                                    <span asp-validation-for="Stock" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-3">
                                    <label asp-for="UrlImagen">UrlImagen</label>
                                    <input asp-for="UrlImagen" class="form-control" />
                                    <span asp-validation-for="UrlImagen" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-3">
                                    <label asp-for="Precio">Precio</label>
                                    <input asp-for="Precio" type="number" class="form-control" />
                                    <span asp-validation-for="Precio" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-8">
                                    <button type="submit" class="btn btn-primary mb-3">Crear Producto</button>
                                </div>

                                <a href="/">Regresar</a>
                            </div>
                        </form>



                    </div>

                </div>
            </div>
        </div>
    </div>

</body>
</html>